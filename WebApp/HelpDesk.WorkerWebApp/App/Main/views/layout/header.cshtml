@using HelpDesk.WorkerWebApp.Resources
<div class="navbar navbar-default navbar-fixed-top" role="navigation" ng-controller="app.views.layout.header as vm">
    <div class="container">
        <div class="navbar-header">
            <span class="navbar-brand">@Resource.AppName</span>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li ng-repeat="item in vm.menu.items" ng-class="{active: vm.isActive(item)}">
                    <a ui-sref="{{item.name}}" ng-click="vm.go(item.name)">{{item.displayName}}
                    <span title="@Resource.Text_CountRequestRequiresConfirmation" class="badge" ng-show="item.countRequiresConfirmation > 0">{{item.countRequiresConfirmation}}</span>
                    </a>
                </li>
            </ul>
            
            

            @Html.Partial("_LoginPartial")
            
            <div class="lang">
                @Html.Partial("_LangMenu")
            </div>
            
        </div>
                
    </div>
    
    <div style="background-color: red; color: white">{{vm.errorMsg}}</div>
</div>
