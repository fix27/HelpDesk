<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="HelpDesk.Entity.PersonalProfile, HelpDesk.Entity" table="PersonalProfile" lazy="false">
    <id name="Id" column="Id" unsaved-value="0">
      <generator class="foreign">
        <param name="property">User</param>
      </generator>
    </id>
    
    <property name="FM" length="200" not-null="true"/>
    <property name="IM" length="200" not-null="true"/>
    <property name="OT" length="200" not-null="true"/>

    <property name="Phone" length="200" not-null="true"/>
    <property name="Cabinet" length="200" not-null="true"/>
    <property name="Subscribe" type="Boolean" not-null="true"/>

    <many-to-one  foreign-key="PersonalProfile_Post_FK" name="Post" fetch="join" column="PostId" class="HelpDesk.Entity.Post, HelpDesk.Entity" not-null="true"/>
    <many-to-one  foreign-key="PersonalProfile_Organization_FK" name="Organization" fetch="join" column="OrganizationId" class="HelpDesk.Entity.Organization, HelpDesk.Entity" not-null="true"/>

    <one-to-one foreign-key="PersonalProfile_User_FK" name="User" class="HelpDesk.Entity.User, HelpDesk.Entity" constrained="true"/>
  </class>
</hibernate-mapping>