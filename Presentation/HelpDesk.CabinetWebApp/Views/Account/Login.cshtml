@using HelpDesk.CabinetWebApp.Models
@using HelpDesk.CabinetWebApp.Resources

@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (@Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl },  FormMethod.Post))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new {@class = "form-control", required = true, autofocus = true })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new {@class = "form-control", required = true })
    </div>

    

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.RememberMe) @Resource.Label_RememberMe
        </label>
    </div>
           
    <div class="row">
        <div class="col-md-5">
            <button class="btn btn-lg btn-block btn-default" type="submit">@Resource.Action_Login</button>
        </div>
        <div class="col-md-7">
            <a href="@Url.Action("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl })">@Resource.Action_Register</a>
        </div>
    </div>

    <div style="padding-top: 20px" class="text-center">
        <a href="@Url.Action("RecoveryPassword", "Account")">@Resource.Label_ForgetPassword</a>
    </div>
}


